{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build"
  ],
  "references": [
    {
      "path": "./shared"
    },
    {
      "path": "./frontend"
    },
    {
      "path": "./backend"
    }
  ]
}